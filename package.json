{
  "name": "lorem-monorepo",
  "private": true,
  "version": "1.0.0",
  "packageManager": "pnpm@10.15.0",
  "scripts": {
    "dev:ui": "pnpm --filter ui dev",
    "dev:demo": "pnpm --filter demo dev",
    "dev:all": "pnpm run dev:ui & pnpm run dev:demo",
    "lint": "eslint 'packages/**/*.{ts,tsx,js,jsx}'",
    "lint:fix": "eslint 'packages/**/*.{ts,tsx,js,jsx}' --fix",
    "format": "prettier --write 'packages/**/*.{ts,tsx,js,jsx,json,css,md}'",
    "lint:ui": "pnpm --filter ui lint",
    "lint:demo": "pnpm --filter demo lint",
    "format:ui": "pnpm --filter ui format",
    "format:demo": "pnpm --filter demo format",
    "lint:all": "pnpm -r lint",
    "format:all": "pnpm -r format"
  },
  "devDependencies": {
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/jest": "^0.2.3",
    "@storybook/testing-library": "^0.2.2",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "prettier": "^3.6.2"
  }
}
